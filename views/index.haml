%form{:action => '/search', :method => 'post'}
  %input{:name => 'query', :type => 'text', :size => 30}
  %input{:type => 'submit', :value => 'Search!'}

- @entries.each do |entry|
  %a{:href => entry.link} 
    = entry.title
  = " - #{entry.feed.title}"
  %br/
%br/
%a{:href => "/page/#{@page_num.to_i + 1}"}
  = "=>"
%br/
%a{:href => "/"}
  Back to Index
